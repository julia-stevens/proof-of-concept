{% include "partials/head.liquid" %}

<main class="main-game column-align">
  <section class="introduction column-align">
    <h1>[NAAM SPEL]</h1>
    <p>Koppel de feitjes aan het juiste lid</p>
  </section>

  <section class="members column-align">
    <div class="title">
      <h2>Leden</h2>
    </div>

    <form action="/game" method="post" class="game-form column-align">
      <ul class="column-align">
        {% for member in members %}
          <li>
            <article class="member-select">
              <!-- member info -->
              <div class="member-info row-align">
                <h3>{{ member.name }}</h3>
                <img 
                src="/proxy-image?url={{ member.image | url_encode }}" 
                alt="{{ member.name }}" 
                width="100" 
                height="100" 
                style="object-fit:cover;"/>
              </div>

              <!-- select met options -->
              <label>
                <span>Welk feitje past bij {{ member.name }}?</span>
                <select name="funfact-{{ member.id }}" id="funfact-{{ member.id }}" class="funfact-select">
                  <button>
                    <selectedcontent></selectedcontent>
                  </button>
                  {% include "partials/funfacts.liquid" funfacts: funfacts %}
                </select>
              </label>
            </article>
          </li>
        {% endfor %}
      </ul>

      <!-- submit button -->
      <div class="form-submit">
        <button type="submit" class="primary-button">Opslaan</button>
      </div>
    </form>

  </section>
</main>

{% include "partials/foot.liquid" %}