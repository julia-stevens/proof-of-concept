{% include "partials/head.liquid" %}

<main class="main-game">
  <section class="introduction">
    <h1>[NAAM SPEL]</h1>
    <p>Koppel de feitjes aan het juiste lid</p>
  </section>
  <section class="game">
    <div class="title">
      <h2>Leden</h2>
    </div>

    <form action="">
      <ul>
        {% for member in members %}
          <li>
            <article>
              <!-- member info -->
              <div class="member-info">
                <h3>{{ member.name }}</h3>
                <img 
                src="/proxy-image?url={{ member.image | url_encode }}" 
                alt="{{ member.name }}" 
                width="100" 
                height="100" 
                style="object-fit:cover;"/>
              </div>

              <!-- select met options -->
              <label>
                <span>Welk feitje past bij {{ member.name }}?</span>
                <select name="funfact">
                  {% render "partials/funfacts.liquid" %}
                </select>
              </label>
            </article>
          </li>
        {% endfor %}
      </ul>

      <!-- submit button -->
      <div class="form-submit">
        <button type="submit">Opslaan</button>
      </div>
    </form>

  </section>
</main>

{% include "partials/foot.liquid" %}